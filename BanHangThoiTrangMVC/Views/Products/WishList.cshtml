@model PagedList.IPagedList<BanHangThoiTrangMVC.Models.EF.LikeProduct>
@using PagedList
@using PagedList.Mvc
@{
    ViewBag.Title = "Danh Sách Sản Phẩm Yêu Thích";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" type="text/css" href="~/Content/assets/styles/main_styles.css">

<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>@ViewBag.Title</h1>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">

    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Danh Sách Sản Phẩm Yêu Thích</h3>
        </div>
        <div class="card-body">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>STT</th>
                        <th>Mã Sản Phẩm</th>
                        <th>Tên Sản Phẩm</th>
                        <th>Giá</th>
                        <th>Ngày Thêm</th>
                        <th>Hành Động</th>
                    </tr>
                </thead>

                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        var i = ((ViewBag.Page - 1) * ViewBag.PageSize) + 1;
                        foreach (var item in Model)
                        {
                            <tr>
                                <td>@i</td>
                                <td>@item.Products.ProductCode</td>
                                <td>@item.Products.Title</td>
                                <td>@BanHangThoiTrangMVC.Common.Common.FormatNumber(item.Products.Price, 0)</td>
                                <td>@item.Products.CreateDate.ToString("dd/MM/yyyy")</td>
                                <td>
                                    <a href="@Url.Action("Detail", "Products", new { id = item.ProductId })" class="btn btn-sm btn-success">Xem Chi Tiết</a>
                                    @using (Html.BeginForm("Delete", "Products", FormMethod.Post, new { }))
                                    {
                                        @Html.AntiForgeryToken()
                                        <button type="submit" name="id" value="@item.Id"><a class="btn btn-sm btn-danger">Xóa</a></button>
                                    }
                                </td>
                            </tr>
                            i++;
                        }
                    }
                </tbody>
            </table>
            <div class="row">
                <div class="col-6"></div>
                <div class="col-6" style="text-align:right;">
                    @Html.PagedListPager(Model, page => Url.Action("WishList", new { page }))
                </div>
            </div>
        </div>
        <!-- /.card-body -->
        <div class="card-footer">

        </div>
        <!-- /.card-footer-->
    </div>
    <!-- /.card -->

</section>
