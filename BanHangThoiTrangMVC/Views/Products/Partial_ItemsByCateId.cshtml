@model IEnumerable<BanHangThoiTrangMVC.Models.EF.Product>

@if (Model != null && Model.Any())
{
    foreach (var item in Model)
    {
        var strImg = "";
        var img = item.ProductImages.FirstOrDefault(x => x.IsDefault);
        if (img != null)
        {
            strImg = img.Image;
        }
        <div class="product-item @item.ProductCategory.Alias">
            <div class="product discount product_filter">
                <div class="product_image">
                    <img src="@strImg" alt="@item.Title">
                </div>
                @using (Html.BeginForm("WishList", "Products", FormMethod.Post, new { }))
                {
                    @Html.AntiForgeryToken()
                    <button type="submit" name="ProductId" value="@item.Id"><div class="favorite favorite_left"></div></button>
                }
                @if (item.PriceSale > 0)
                {
                    <div class="product_bubble product_bubble_right product_bubble_red d-flex flex-column align-items-center"><span>sale</span></div>
                }
                <div class="product_info">
                    <h6 class="product_name"><a href="@Url.Action("Detail", "Products", new { id = item.Id })">@item.Title</a></h6>
                    @if (item.PriceSale > 0)
                    {
                        <div class="product_price">@BanHangThoiTrangMVC.Common.Common.FormatNumber(item.PriceSale, 0)<span>@BanHangThoiTrangMVC.Common.Common.FormatNumber(item.Price, 0)</span></div>
                    }
                    else
                    {
                        <div class="product_price">@BanHangThoiTrangMVC.Common.Common.FormatNumber(item.Price, 0)</div>
                    }

                </div>
            </div>
            <div class="red_button add_to_cart_button"><a href="#" class="btnAddToCart" data-id="@item.Id">add to cart</a></div>
        </div>
    }
}
